{% extends '_layout.' + getConfig('viewExtension') %}


{% block content %}

    <!--breadcrumbs start-->
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-4">
                    <h1>
                        Blog Details
                    </h1>
                </div>
                <div class="col-lg-8 col-sm-8">
                    <ol class="breadcrumb pull-right">
                        <li>
                            <a href="/">
                                Home
                            </a>
                        </li>
                        <li class="active">
                            Page Details
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!--breadcrumbs end-->

    <!--container start-->
    <div class="container">

        <div class="row">

            <!--blog start-->
            <div class="col-lg-9">
                <div class="blog-item">
                    <div class="row">
                        <div class="col-lg-2 col-sm-2">
                            <div class="date-wrap">
                                <span class="date">
                                    {{ post.published_at | moment("DD") }}
                                </span>
                                <span class="month">
                                    {{ post.published_at | moment("MMMM") }}
                                </span>
                            </div>
                            <div class="author text-right">
                                By
                                <a href="#">
                                    {{ item.user.display_name }}
                                </a>
                            </div>
                        </div>

                        <div class="col-lg-10 col-sm-10">
                            {% if item.image %}
                            <div class="blog-img gs">
                                <img src="{{ item.image }}" alt=""/>
                            </div>
                            {% endif %}
                            <h1>
                                <a href="#">
                                    {{ item.title |safe }}
                                </a>
                            </h1>

                            <p>{{ item.full_text |safe }}</p>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-3">

            </div>


        </div>

    </div>


{% endblock %}